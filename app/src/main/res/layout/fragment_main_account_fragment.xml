<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_favorite_fragment"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/account_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp" >

        <TextView
            android:id="@+id/account_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내정보"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>

    <!--구분선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="45dp"
        android:background="#D5DDE0"/>

    <ImageView
        android:id="@+id/account_tree_iv"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="110dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_seed" />

    <LinearLayout
        android:id="@+id/account_detail_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="410dp"
        android:orientation="vertical" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kane Park" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="example@gmail.com" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="010-0000-0000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nov. 11, 1998" />

    </LinearLayout>

    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="610dp"
        android:text="개인정보 변경하기"
        android:textStyle="bold"
        android:background="@drawable/custom_button2"
        android:textColor="#333333" />

</FrameLayout>