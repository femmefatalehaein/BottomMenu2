<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center" >

    </EditText>
    <!--상단 메뉴 카테고리 시작-->
    <LinearLayout
        android:id="@+id/form_list_category_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:gravity="left"
        android:orientation="horizontal"


        android:background="@color/white"
        >

        <android.widget.Button
            android:id="@+id/form_list_1"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginVertical="2dp"
            android:background="@drawable/category_selected"
            android:gravity="center"
            android:text="한식"
            android:textColor="@color/white"
            android:textSize="10sp" />


        <android.widget.Button
            android:id="@+id/form_list_2"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginVertical="2dp"
            android:background="@color/transparent"
            android:text="양식"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <android.widget.Button
            android:id="@+id/form_list_3"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginVertical="2dp"
            android:background="@color/transparent"
            android:text="중식"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <android.widget.Button
            android:id="@+id/form_list_4"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginVertical="2dp"
            android:background="@color/transparent"
            android:text="야식"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <android.widget.Button
            android:id="@+id/form_list_5"
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:layout_marginVertical="2dp"
            android:background="@color/transparent"
            android:text="카페·디저트"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <android.widget.Button
            android:id="@+id/form_list_6"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginVertical="2dp"
            android:background="@color/transparent"
            android:text="기타"
            android:textColor="@color/black"
            android:textSize="10sp"
            />

    </LinearLayout>
    <!--상단 메뉴 카테고리 끝-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/menu_item_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/test_img" />

        <LinearLayout
            android:id="@+id/menu_item_text_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/menu_item_iv"
            android:layout_alignBottom="@+id/menu_item_iv"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/menu_item_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menu_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구테로이테"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/menu_item_price_text_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/menu_item_price_title_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="가격"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/menu_item_price_sub_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="3,000 ~"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_item_package_text_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/menu_item_package_title_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="포장 혜택"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/menu_item_package_sub_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="포장방문시 1,000원 할인"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!--구분선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#D5DDE0"/>

</LinearLayout>